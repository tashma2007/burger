<div class="container">

	<div class="row">
		<div class="center col-sm-12">
			<img src="assets/img/burger.jpeg" alt="Eat-Da-Burger">
			<h1>Eat-Da-Burger!!!</h1>
			<p></p>
		</div>
	</div>
</div>
<br>
<div class="row">
	<div class="col-sm-6">

		<ul>
			{{#each burgers_data }}
			{{#unless this.devoured}}
			<li>
				{{this.id}}
				{{this.burger_name}}

				<!--<form action="/api/burgers/{{this.id}}" method="POST">-->
				<form action="burgers/insertOne/{{this.id}}?_method=PUT" method="POST">
					<input type="hidden" name="devoured" value="false">
					<button type="submit">Devour It!</button>
				</form>

			</li>
			{{/unless}}
			{{/each}}
		</ul>

	</div>

	<div class="col-sm-6">

		{{#each burgers}}
		{{#if this.devoured}}
		<li>
			{{this.id}}
			{{this.burger_name}}
			<form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
				<input type="hidden" name="devoured" value="true">
			</form>
		</li>
		{{/if}}
		{{/each}}

	</div>

</div>


<div class="form-group">
	<div class="col-sm-5">
		<textarea class="form-control inputstl" rows="5" action="/" method="POST"></textarea>
		<br>
		<input class="btn btn-primary" type="submit" value="Submit">
		<h5>Enter a burger you want to eat and click the "Submit" button.</h5>
	</div>
</div>