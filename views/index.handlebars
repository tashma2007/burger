<div class="container">

	<div class="row">
		<div class="col-sm-12">
			<div class="center-align">
				<img src="assets/img/burger.jpeg" alt="Eat-Da-Burger">
				<h1>Eat-Da-Burger!!!</h1>
				<p></p>
			</div>
		</div>
	</div>
</div>
<br>

<!--Uneaten burger-->

<div class="row">
	
	<div class="col-sm">
		<ol>
			{{#each burgers}}
			{{#unless devoured}}
			<li>
				{{burger_name}}

				<button class="change-sleep btn btn-outline-dark  " data-id="{{id}}" data-newsleep="{{sleep}}"
					value="Devour it!"
				</button>

			</li>

			{{/unless}}
			{{/each}}
		</ol>

	</div>

	<div class="col-sm-12 text-align right">

<!--Devoured burger-->
		
		<ol class="grey">
			{{#each burgers}}
			{{#if devoured}}
			<li>
				{{burger_name }}
			</li>
			{{/if}}
			{{/each}}
		</ol>
	</div>
</div>

<!--Add burger to eat-->

<form class="create-form">

	<div class="form-group col-sm-5">
		<label for="ca"></label>
		<textarea class="form-control input stl" rows="3"></textarea>
	</div>
	<br>
	<button class="btn btn-primary" type="submit">Submit</button>
	<br>
	Enter a burger you want to Eat. Then Click Submit Button.
</form>
</div>

